<Window x:Class="CH12_ResponsiveWPF.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CH12_ResponsiveWPF"
        mc:Ignorable="d"
        Background="White"
        Foreground="White"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="SplashWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label TextBlock.FontSize="32" Content="Responsive WPF Example" />
        <Label x:Name="LoadingProgressLabel" TextBlock.FontSize="12" Content="Loading..." />
        <ProgressBar x:Name="LoadingProgressBar" Minimum="0" Maximum="100" />
    </StackPanel>
</Window>
